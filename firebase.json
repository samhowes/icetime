{
  "firestore": {
    "rules": "ops/firebase/firebase.rules.json",
    "indexes": "ops/firebase/firestore.index.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
